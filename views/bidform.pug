extends layout

block content
  -data = data || {}
  script(src="http://code.jquery.com/jquery-1.9.1.min.js")
  script(src="javascripts/jquery.validate.js")
  script(src="javascripts/bidFormValidation.js")
  if errors
    ul.my-errors
      for error in errors
        li= error.msg
  br
  form(action="/bidpost/"+jobs[0]._id id="bid-form" name ="bid-form" id="bid-form" method="POST" class="form-registration")
    label(for="Title") Title:
    input(
      type="text"
      id="name"
      name="name"
      class="form-control"
      value=jobs[0].title
      readonly
    )

    label(for="description") Description:
    input(
      type="text"
      id="description"
      name="description"
      class="form-control"
      value=jobs[0].description
      readonly
    )

    label(for="jobId") jobId
    input(
    type="text"
    id="jobId"
    name="jobId"
    class="form-control"
    value=jobs[0]._id
    readonly
    )
    label(for="bidAmt") Bid Amount
    input(
    type="number"
    id="bidAmt"
    name="bidAmt"
    class="form-control"
    min="1"
    value=data.bidAmt
    )

    input(
      type="submit"
      value="Submit"
      class="btn btn-lg btn-primary btn-block"
    )
    br
    a(class="btn btn-primary" href="/dashboard" roles="button") Return to Dashboard
